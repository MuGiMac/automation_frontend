<web-app>

  <security-constraint>

    <web-resource-collection>
      <web-resource-name>Secured Area</web-resource-name>
      <url-pattern>/api/*</url-pattern>
    </web-resource-collection>

    <auth-constraint>
      <role-name>monitor</role-name>
    </auth-constraint>

  </security-constraint>
 
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Tomcat Protected Area</realm-name>
  </login-config>
 
  <security-role>
    <role-name>monitor</role-name>
  </security-role>
  
</web-app>